<% include partials/top %>

<div class="container">

  <h1 class="text-center">New Blog</h1>

  <form class="form" action="/blogs" method="POST">
    
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" type="text" name="title" placeholder="Enter Blog..." required>
    </div>

    <div class="form-group">
      <label for="calories">Text Body</label>
      <textarea class="form-control" name="body" placeholder="Enter Text Body..." rows="3" required></textarea>
    </div>

    <div class="form-group">
      <label for="image">Image Link</label>
      <input class="form-control" type="text" name="image" placeholder="Enter Image Link..." required>
    </div>

    <button class="btn btn-lg btn-outline-primary btn-block">Create Blog</button>

  </form>

</div>

