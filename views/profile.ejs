    </tbody>

  </table>

  <a class="btn btn-lg btn-lg btn-outline-primary btn-block" href="/users/<%= user._id %>/edit">Edit User</a>

  <a class="btn btn-lg btn-lg btn-outline-primary btn-block" href="/blogs/<%= user._id %>/list">View My Blogs</a>

  </div>

</div>

