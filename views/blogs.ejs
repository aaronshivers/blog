<% include partials/top %>

<div id="homeContainer" class="container">

  <h1 class="text-center">Blogs List</h1>

  <% blogs.forEach((blog) => { %>
  <div class="card mb-3">

    <a href="/blogs/<%= blog._id %>/view">

      <img src="<%= blog.image %>" class="card-img-top">
      
      <div class="card-body">

        <% if (blog.creator) { %>

        <h6><%= blog.creator.firstName %> <%= blog.creator.lastName %></h6>

        <% } %>

        <h4 class="card-title"><%= blog.title %></h4>

        <p class="card-text text-dark"><%= blog.body %></p>

      </div>

    </a>

  </div>
  <% }) %>

  <% if (paginate.hasPreviousPages || paginate.hasNextPages) { %>
  <nav aria-label="Page navigation">
    
    <ul class="pagination justify-content-center">

      <% if (paginate.hasPreviousPages) { %>

      <li class="page-item"><a class="page-link" href="<%= paginate.href(true) %>">Previous</a></li>

      <% } %>

      <% if (pages) { %>

        <% pages.forEach((page) => { %>

        <li class="page-item"><a class="page-link" href="<%= page.url %>"><%= page.number %></a></li>

        <% }) %>

      <% } %>

      <% if (paginate.hasNextPages(pageCount)) { %>

      <li class="page-item"><a class="page-link" href="<%= paginate.href() %>">Next</a></li>

      <% } %>

    </ul>

  </nav>
  <% } %>

</div>

<% include partials/bottom %>
