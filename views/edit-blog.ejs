<% include partials/top %>

<div class="container">

  <h1 class="text-center">Edit Blog</h1>

  <form class="form" action="/blogs/<%= blog._id %>?_method=PATCH" method="POST">
    
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" type="text" name="title" value="<%= blog.title %>" placeholder="Enter Blog..." required>
    </div>

    <div class="form-group">
      <label for="calories">Text Body</label>
      <textarea class="form-control" name="body"  placeholder="Enter Text Body..." rows="3" required><%= blog.body %></textarea>
    </div>

    <div class="form-group">
      <label for="image">Image Link</label>
      <input class="form-control" type="text" name="image" value="<%= blog.image %>" placeholder="Enter Image Link..." required>
    </div>

    <button class="btn btn-lg btn-outline-primary btn-block">Update Blog</button>

  </form>

  <form class="mt-2" id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">

    <button type="submit" class="btn btn-lg btn-block btn-outline-danger">Delete Blog</button>

  </form>

</div>

<% include partials/bottom %>
